<div
  v-if="docs.data && docs.data[nav.page] && docs.data[nav.page] && docs.data[nav.page].create && selectPick(['categoriesList', 'groupsList'])"
  class="modal fade" id="createTopics" tabindex="-1" role="dialog" aria-labelledby="createTopicsLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Update Object</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body" id="Create">

        <div class="row">
          <div class="col-sm-4">
            <div class="form-group">
              <label v-if="docs.data[nav.page].create.name" class="cLable">Topic name</label>
              <label v-else class="cLable"></label>
              <input  v-model="docs.data[nav.page].create.name" type="text" class="form-control"
                name="name" placeholder="Name">
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              <label v-if="docs.data[nav.page].create.permissions" class="cLable">Permissions</label>
              <label v-else class="cLable"></label>
              <input  v-model="docs.data[nav.page].create.permissions" type="number"
                class="form-control" name="permissions" placeholder="Permissions">
            </div>
          </div>

          <div class="col-sm-4">
            <label class="cLable d-flex d-flex justify-content-center">Enabled</label>
            <div class="d-flex d-flex justify-content-center">
              <input type="checkbox" checked name="enabled" class="bootstrap-switch"
                data-on-label="<i class='now-ui-icons ui-1_check'></i>"
                data-off-label="<i class='now-ui-icons ui-1_simple-remove'></i>" />
            </div>
          </div>

        </div>

        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
            <label class="cLable">Category</label>
            <select @change="setFormList($event, nav.page, 'category', 'string')" id="categoriesList"
              class="selectpicker" data-live-search="true" multiple data-max-options="1">
              <option v-if="lists.categoriesList && lists.categoriesList.data" v-for="list in lists.categoriesList.data"
                :id="list._id">{{list.name}}</option>
            </select>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
            <label class="cLable">Groups</label>
            <select @change="setFormList($event, nav.page, 'groups')" id="groupsList" class="selectpicker"
              data-live-search="true" multiple>
              <option v-if="lists.groupsList && lists.groupsList.data" v-for="list in lists.groupsList.data"
                :id="list._id">{{list.name}}</option>
            </select>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="uploadCategoryImgAddon">Upload</span>
              </div>
              <div class="custom-file">
                <input data-doc="Topics" data-column="img" type="file" class="custom-file-input" id="uploadCategoryImg"
                  aria-describedby="uploadCategoryImgAddon" @change="fileNameCheck('uploadCategoryImg')">
                <label class="custom-file-label"
                  for="uploadCategoryImg">{{uploadCategoryImg ? uploadCategoryImg : 'Select topic image.'}}</label>
              </div>
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="uploadCategorySubImgAddon">Upload</span>
              </div>
              <div class="custom-file">
                <input data-doc="Topics" data-column="logo" type="file" class="custom-file-input" id="uploadCategorySubImg"
                  aria-describedby="uploadCategorySubImgAddon" @change="fileNameCheck('uploadCategorySubImg')">
                <label class="custom-file-label"
                  for="uploadCategorySubImg">{{uploadCategorySubImg ? uploadCategorySubImg : 'Select sub topic image.'}}</label>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label v-if="docs.data[nav.page].create.description" class="cLable">Topic description</label>
              <label v-else class="cLable"></label>
              <textarea  v-model="docs.data[nav.page].create.description" rows="4" cols="80"
                placeholder="Add description for category" name="description" class="form-control"></textarea>
            </div>
          </div>
        </div>

        <!-- <input id="select-to" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"> -->
        <h4 class="modal-title">Modal Heading</h4>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <div class="text-right">
          <button
            v-if="docs.data && docs.data[nav.page] && docs.data[nav.page] && docs.data[nav.page].create && docs.data[nav.page].create.name && docs.data[nav.page].create.description"
            @click="createDoc(nav.page, $event)" type="button" class="btn btn-primary">Save</button>
        </div>
      </div>

    </div>
  </div>
</div>