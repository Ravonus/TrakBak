<div v-if="docs.data && docs.data[nav.page] && docs.data[nav.page] && docs.data[nav.page].create && selectPick(['groupsList', 'navigationsList'])"
  class="modal fade" id="createUsers" tabindex="-1" role="dialog" aria-labelledby="createusersLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Update Object</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">

        <div class="row">

          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Account</label>
              <input @input="vModel($event, true)"  type="text" class="form-control" name="account"
                placeholder="Account">
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Email</label>
              <input @input="vModel($event, true)"  type="text" class="form-control" name="email" placeholder="Email">
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Password</label>
              <input @input="vModel($event, true)"  type="password" class="form-control" name="password"
                placeholder="Password">
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Permissions</label>
              <input @input="vModel($event, true)"  type="number" class="form-control" name="permissions"
                placeholder="Permissions">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
            <select @change="setFormList($event, nav.page, 'groups')" id="groupsList" class="selectpicker" data-live-search="true" multiple>
              <option v-if="lists.groupsList && lists.groupsList.data" v-for="list in lists.groupsList.data" :id="list._id">{{list.name}}</option>
            </select>
          </div>

          <div class="col-sm-12 col-md-6 col-lg-4 mt-4">
              <select @change="setFormList($event, nav.page, 'navigations')" id="navigationsList" class="selectpicker" data-live-search="true" multiple>
                <option v-if="lists.navigationsList && lists.navigationsList.data" v-for="list in lists.navigationsList.data" :id="list._id">{{list.name}}</option>
              </select>
            </div>

          <div class="col-sm-12 col-md-6 col-lg-4">

            <div class="form-group">
              <label class="cLable">First name</label>
              <input @input="vModel($event, true, 'persons')"  type="text" class="form-control" name="persons.firstName"
                placeholder="First name">
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Last name</label>
              <input @input="vModel($event, true, 'persons')"  type="text" class="form-control" name="persons.lastName"
                placeholder="Last name">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Address</label>
              <input  @input="vModel($event, true, 'persons')" type="text" class="form-control" name="persons.address"
                placeholder="Address">
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <div class="form-group">
              <label class="cLable">City</label>
              <input @input="vModel($event, true, 'persons')" type="text" class="form-control" name="persons.city"
                placeholder="City">
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <div class="form-group">
              <label class="cLable">Zip code</label>
              <input @input="vModel($event, true, 'persons')"  type="text" class="form-control" name="persons.zip"
                placeholder="Zip Code">
            </div>
          </div>
          <div class="col-sm-6 col-md-4">
            <div class="form-group">
              <label class="cLable">State</label>
              <input @input="vModel($event, true, 'persons')"  type="text" class="form-control" name="persons.state"
                placeholder="State">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label class="cLable">User Bio</label>
              <textarea @input="vModel($event, true, 'persons')"  rows="4" cols="80" placeholder="Update users bio"
                name="persons.bio" class="form-control" placeholder="User Bio">{{docs.data[nav.page].create.persons.bio}}</textarea>
            </div>
          </div>
        </div>

        <!-- <input id="select-to" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"> -->
        <h4 class="modal-title">Modal Heading</h4>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <div class="text-right">
          <button v-if="docs.data && docs.data[nav.page] && docs.data[nav.page] && docs.data[nav.page].create && docs.data[nav.page].create.permissions && docs.data[nav.page].create.account && docs.data[nav.page].create.email && docs.data[nav.page].create.password && docs.data[nav.page].create.persons.firstName && docs.data[nav.page].create.persons.lastName"
            @click="createDoc(nav.page, $event)" type="button" class="btn btn-primary">Save</button>
        </div>
      </div>

    </div>
  </div>
</div>