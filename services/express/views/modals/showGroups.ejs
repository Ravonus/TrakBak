<div v-if="docs && nav.page && docs[nav.page]" class="modal fade" id="showGroups" tabindex="-1" role="dialog" aria-labelledby="showGroupsLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Update Object</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div v-if="docs && nav.page && rowNumber && docs[nav.page] && docs[nav.page][rowNumber]" class="modal-body">

        <div class="row">
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Name</label>
              <input v-if="docs && nav.page && docs[nav.page]" @input="docsInput($event, rowNumber, 'name', nav.page)" v-model="docs[nav.page][rowNumber].name"
                type="text" class="form-control" name="name" placeholder="Name">
            </div>
          </div>
          <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="form-group">
              <label class="cLable">Permissions</label>
              <input v-if="docs && nav.page && docs[nav.page]" @input="docsInput($event, rowNumber, 'permissions', nav.page)"
                v-model="docs[nav.page][rowNumber].permissions" type="number" class="form-control" name="permissions"
                placeholder="Permissions">
            </div>
          </div>
        </div>
        <!-- <input id="select-to" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"> -->
        <h4 class="modal-title">Modal Heading</h4>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <div class="text-right">
          <button
          v-if="docs.data[nav.page] && docs.data[nav.page][rowNumber] && docs.data[nav.page][rowNumber].saveTrue"
          @click="saveDoc(nav.page, rowNumber, docs[nav.page][rowNumber]._id)" type="button"
          class="btn btn-primary">Save</button>
        </div>
      </div>

    </div>
  </div>
</div>