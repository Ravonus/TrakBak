<!--Accordion wrapper-->
<div v-for="(category, index) in vueCustom" class="accordion md-accordion my-2" :id="'accordionEx'+index" role="tablist">

  <!-- Accordion card -->
  <div class="card col-12 mb-3">

    <!-- Card header -->
    <div class="card-header" role="tab">
      <a data-toggle="collapse" :data-parent="'#accordionEx'+index" :href="'#collapse'+category.name"
        aria-expanded="true" :aria-controls="'collapse'+category.name">
        <h5 class="mb-1">
          {{category.name}} <i class="fas fa-angle-down rotate-icon"></i>
        </h5>
      </a>
    </div>
    <!-- v-for="(topic, index) in category.topics" -->
    <!-- Card body -->
    <div :id="'collapse'+category.name" class="collapse show" role="tabpanel" :data-parent="'#accordionEx'+index">
      <div class="row d-flex justify-content-around">
        <div v-for="(topic, index) in category.topics"
          class="card-wrapper col-xl-3 col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div :id="'card'+noSpecial(topic.name)" class="card card-rotating text-center">

            <!-- Front Side -->
            <div class="face front">

              <!-- Image-->

              <div class="card-up">
                <img v-if="topic.img" class="card-img-top" :src="`${topic.img.directory}/${topic.img.fileName}`"
                  alt="Image with a photo of clouds.">
                <img v-else class="card-img-top" src="https://mdbootstrap.com/img/Photos/Others/photo7.jpg"
                  alt="Image with a photo of clouds.">
              </div>

              <!-- Avatar -->
              <div v-if="topic.logo" class="avatar2 mx-auto white"><img id="foo"
                  :src="`${topic.logo.directory}/${topic.logo.fileName}`" class="rounded-circle"
                  alt="Sample avatar image."></div>
              <div v-else class="avatar2 mx-auto white"><img id="foo" src="/img/Logo.png" class="rounded-circle"
                  alt="Sample avatar image.">
              </div>

              <!-- Content -->
              <div class="card-body">
                <h4 class="font-weight-bold mb-3">{{topic.name}}</h4>
                <p class="font-weight-bold blue-text">Posts: {{category.posts ? category.posts.length : 0}}</p>
                <!-- Triggering button -->
                <a class="rotate-btn" @click="toggleClass('card'+noSpecial(topic.name))"><i class="fas fa-redo-alt"></i>
                  Click here for more details</a>
              </div>
            </div>
            <!-- Front Side -->

            <!-- Back Side -->
            <div class="face back">
              <div class="card-body">

                <!-- Content -->
                <h4 class="font-weight-bold mb-0">Details</h4>
                <hr>
                <p>
                  {{topic.description}}
                  <hr>
                  <!-- Social Icons -->
                  <ul class="list-inline py-2">
                    <li class="list-inline-item"><a class="p-2 fa-lg fb-ic"><i class="fab fa-facebook-f"></i></a></li>
                    <li class="list-inline-item"><a class="p-2 fa-lg tw-ic"><i class="fab fa-twitter"></i></a></li>
                    <li class="list-inline-item"><a class="p-2 fa-lg gplus-ic"><i class="fab fa-google-plus-g"></i></a>
                    </li>
                    <li class="list-inline-item"><a class="p-2 fa-lg li-ic"><i class="fab fa-linkedin-in"></i></a></li>
                  </ul>
                  <!-- Triggering button -->
                  <a class="rotate-btn" @click="toggleClass('card'+noSpecial(topic.name))"><i class="fas fa-undo"></i>
                    Click here to rotate back
                  </a>

              </div>
            </div>
            <!-- Back Side -->
            
          </div>

        </div>
      </div>
      <!-- Rotating card -->
      <!-- <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> <br> -->
    </div>



  </div>

  <!-- Accordion card -->

</div>
<!-- Accordion wrapper -->
